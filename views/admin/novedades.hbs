<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col">
            <div style="padding: 1% 40%;">
                <img src="/images/userLogin.png" alt="" width="200px" height="200px">
            </div>
            <p class="text-center">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sessi√≥n <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-6" style="margin-top: -9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-4">
            <form class=" row form-inline my-2 my-lg-0" action="/admin/novedades" method="get">
                <div class="col">
                    <input class="form-control mr-sm-2" type="serch" placeholder="Search" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                </div>
                <div class="col">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
                </div>
            </form>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success" style="font-size: small;"><i class="fas fa-plus"> Nuevo</i></a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Imagen</th>
                <th scope="col" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>
                <td class="text-end">
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{#if is_search}}
        {{#unless novedades.length}}
            No se encontraron resultados para "<strong>{{q}}</strong>"
        {{/unless}}
    {{/if}}
</div>