<div class="container" style="margin: 80px auto;">
    <div class="row">
        <div class="col" style="padding: 1% 30%;">
            <div style="padding: 1% 25%;">
                <img class="text-center" src="/images/userLogin.png" alt="" width="200px" height="200px">
            </div>
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 1%;">Enviar</button>
            </form>
            {{#if error}}
                <p>Usuario o contrase√±a incorrecto</p>
            {{/if}}
        </div>
    </div>
</div>